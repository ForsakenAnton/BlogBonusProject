@model PostDeleteVM
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Post</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Body)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Body)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Created)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Created)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.MainPostImagePath)
        </dt>
        <dd class="col-sm-10">
            <img src="@Url.Content(Model.Post.MainPostImagePath)"
                 class="w-25 mb-3"
                 alt="@Model.Post.Title">
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => Model.Post.Category)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Post.Category is not null)
            {
                @Html.DisplayFor(model => Model.Post.Category.Name)
            }
            else
            {
                @: No Category
            }
            
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => Model.Post.User!.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => Model.Post.User!.UserName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Post.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
