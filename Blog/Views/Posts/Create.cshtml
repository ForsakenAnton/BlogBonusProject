@model PostCreateVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create New Post</h1>
<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Post.Title" class="control-label"></label>
                <input asp-for="Post.Title" class="form-control" />
                <span asp-validation-for="Post.Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Post.Description" class="control-label"></label>
                <input asp-for="Post.Description" class="form-control" />
                <span asp-validation-for="Post.Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Post.Body" class="control-label"></label>
                <textarea asp-for="Post.Body" class="form-control"></textarea>
                <span asp-validation-for="Post.Body" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" type="file" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="mb-5">
                <label asp-for="Post.CategoryId" class="control-label"></label>
                <select asp-for="Post.CategoryId" 
                        asp-items="@Model.CategoriesSL" 
                        class="form-select">
                    <option selected="selected" value="">No category</option>
                </select>
                <span asp-validation-for="Post.CategoryId" class="text-danger"></span>
            </div>


            <div class="mb-5">
                <input type="submit" 
                       value="Create" 
                       class="btn btn-outline-success fs-3 fw-bold w-100" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" 
       class="btn btn-outline-secondary fs-4 fw-bold">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
